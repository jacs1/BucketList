<div class="new-destination">
<h2> New Destination </h2>

<%= form_for Destination.new, :remote => true do |f| %>



	<div class="field">
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.text_field :image_url %>
	</div>


	<div class="field">
	<%= f.submit %>
	</div>

<% end %>
</div>
