<link rel="stylesheet" type="text/css" href="/todo_items.css" />

<div class="todo-item <%= todo_item.completed? ? 'completed' : '' %>">
	<h3><%= todo_item.name %></h3>
	<%= link_to image_tag('like.jpg'), like_todo_item_path(todo_item.destination.id, todo_item.id), :remote => true, :method => :post, :class => 'like' %>


<div class="comments<%= todo_item.id %>">

		<% todo_item.comments.each do |comment| %>
		<%= render comment%>
		<% end %>
		
</div>

 


	<%= render :partial => 'comments/form', :locals => { :item => todo_item } %>

	<div class="info">
		<%= distance_of_time_in_words(Time.now, todo_item.created_at) %> ago
	</div>
</div>